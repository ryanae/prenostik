<div class="row-fluid">
	<div class="span12">
		<h1>Suspend Account</h1>		
		<hr>
	</div>
</div>

<div class="row-fluid profile">
    <div class="profile-avatar">
        <i class="icon-remove"></i>
    </div>
</div>

<form id= "deactivateForm" method="post" action="/corporate/deactivate_account">
<style>
p.box {border-style:double; padding:10px}
</style>
<div class="row-fluid">
	<div class="span6 offset3 flat-well">
		<fieldset>
			<div class="row-fluid">
				<div class="span12">
				       <h2>Select Account to be Suspended:</h2>
					   <br>					   
					<select id= "selAccount"> 
						<option id = "-1" value="-1">(Select Account)</option>						
						{{#each accounts}}
							<option id='{{this.id}}' value=	'{{this.data}}'>
							{{this.name}}
							</option>
						{{/each}}						
					</select>
				</div>	
			</div>				
			<div class="row-fluid">
				<div class="span2">
					<label>Account Status:</label>
				</div>
				<div class = "span2">
					<label id="status" name="status">(status)</label>
				</div>
			</div>
			<div class="row-fluid">				
				<div class="span5">
					<label>Address/Location:</label>									
					<label id="name" name="name">(account name)</label>
					<label id="address" name="address">(street)</label>
				</div>				
			</div>
			<div class="row-fluid">	
				<div class="span2">						
					<label id="city">(city)</label>						
				</div>
				<div class="span2 text-left">						
					<label id="state">(state)</label>
				</div>
			</div>
			<div class="row-fluid">
				<div class="span2">				
					<label id="zip">(postal code)</label>
				</div>
			</div>							
		</fieldset>		
	</div>
</div>

<div class="row-fluid">
	<div class="span6 offset3 text-right">
		<a data-toggle="modal" href="#delActConfirm" class="btn btn-block btn-primary" id="mcDeleteBtn"><i class="icon-remove icon-large"></i> Suspend Account</a>
		<div id="cbp"></div>
	</div>
</div>

<!-- Confirmation dialog -->
<div class="modal fade" id="delActConfirm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 id="modal-title" class="modal-title">Confirm Account Suspension</h4>
            </div>
            <div class="modal-body">
				
					<div class="span4">												
							<label id="lblWarning">Are you sure you wish to suspend this account?</label>
					</div>
				
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
				<button type="submit" id = 'mconfirm' class="btn btn-primary">Suspend Account</button>
            </div>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->


<input type="hidden" id="id" name = "id" value=""/> 

</form>
