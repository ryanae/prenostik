        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Account Data Error</h4>
            </div>
            <div class="modal-body">
				<h6 id=errText> </h6>
                <div class="span6">	
					<div id="errList"></div>
				</div>	 
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">OK</button>                
            </div>
        </div>
    </div>
</div><!-- end modal dialog -->

<!-- List edit dialog -->
<div class="modal fade" id="listEdit" tabindex="-1" role="dialog" aria-labelledby="listEditLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 id = "dlgTitle" class="modal-title">Edit List</h4>
            </div>
            <div class="modal-body">
				<h6>Select "(Create New...)" or choose an item to edit or delete:</h6>
                <div class="span3">	
					<div id="theList"></div>
					<label id="instText"> </label>
					<input type="text" placeholder = "<new value>" id = "newListValue" name="newListValue" value=""/>
				</div>				
				<div class="span3" >
					<button type="button" id="listDel" class="btn-danger" title="Warning: immediate effect" >Delete</button>
				</div>				
				<input type="hidden" id="assignedList" name = "assignedList" value="" />
            </div>
            <div class="modal-footer">
				<button type="button" id="listSave" class="btn btn-primary">Save Changes</button>			
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
				<button type="button" id="listOkay" class="btn btn-default" data-dismiss="modal">Done</button>              
            </div>
        </div>
    </div>
</div><!-- end modal dialog-->

<!-- Role change dialog -->
<div class="modal fade" id="roleChange" tabindex="-1" role="dialog" aria-labelledby="RoleEditLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 id = "dlgTitle" class="modal-title">Change Site Manager</h4>
            </div>
            <div class="modal-body">
				<h6>Select a different user to assign as the Site Manager.</h6>
                <div class="span3">	
					<div id="userList">
						<select id='selUserList'>
						</select>
					</div>
					<label id="instTextb"> </label>					
				</div>								
            </div>
            <div class="modal-footer">				
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
				<button type="button" id="roleOK" class="btn btn-default" data-dismiss="modal">Change</button>              
            </div>
        </div>
    </div>
</div><!-- end modal dialog-->

<div id='info' hidden> 
	<ul hidden>
		{{#each siteManagers}}
			<li id='{{this.siteid}}' data-json='{{this.data}}'>{{this.name}}</li>
		{{/each}}
	</ul>
	<input type="text" id="adminUserID" value=""/>
</div>

</form>