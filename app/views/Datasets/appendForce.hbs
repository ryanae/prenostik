<div class="row-fluid">
	<div class="span12">
		<h1>
			<a href="javascript:history.go(-1);"><i class="icon-chevron-sign-left" data-original-title="Back to Datasets" data-toggle="tooltip"></i></a> Append to Data Set
		</h1>
		<hr>
	</div>
</div>

<form method="POST" action="/manage/datasets/append" enctype="multipart/form-data" id="appendDatasetForm">
	<div class="rows">
		<div class="row-fluid row-container">
			<div class="span5">
				<label>Append To</label>
				<div class="lead" >{{dataset.name}}</div>
                <input id="appendFileName" type="hidden" name="appendFileName" value="{{dataset.name}}"/>
                <input id="appendFileId" type="hidden" name="appendFileId" value="{{dataset.id}}"/>
			</div>
			<div class="span5">
				<label>File</label>
				<input type="text" name="file_clone" disabled="disabled" class="disabled" value=""/>
				<button class="btn btn-choose-file">Choose File</button>
				<input type="file" class="input-file" name="file[0]" value=""/>
			</div>
			<div class="span2">
				<label>Force Action</label>
        <div id="btn-appendForce" class="" title="Force the data to append." data-toggle="tooltip">
				<label id="checkboxLabel" class="checkbox" for="appendForce">
           <input type="checkbox" value="" name="appendForce" id="appendForce" data-toggle="checkbox">
				</label>
        </div>
      </div>
		</div>
	</div>
	<hr>
    <div class="navbar navbar-inverse navbar-fixed-bottom">
        <div class="navbar-inner" style="padding-bottom: 5px; padding-right: 5px;">
            <div class="btn-group pull-right">
                <input style="width: 220px;" id="btn-cancel" class="btn btn-default" value="Cancel"/>
                <input style="width: 220px;" id="btn-continue" class="btn btn-default btn-primary" value="Continue" type="submit"/>
            </div>
        </div>
    </div>
    <div id="datasetLoader" class="well">
        <img src="/img/ajax-loader-circle.gif"/>&nbsp; Uploading Data...
    </div>
</form>
