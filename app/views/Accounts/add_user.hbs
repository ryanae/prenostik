<div class="row-fluid">
	<div class="span12">
		<div>
			<h1 id='coidentifier'> </h1>		
			<h3>Add New User</h3>
		</div>
		<hr>
	</div>
</div>

<div class="row-fluid profile">
    <div class="profile-avatar">
        <i class="icon-user"></i>
    </div>
</div>

<form id = "add_user_form" method="post" action="/users/accounts_add_user">

<div class="row-fluid">
	<div class="span6 offset3 flat-well">		
		<legend>Profile</legend>
		<div class="row-fluid">
			<div class="span12">
				<label>Name:</label>				 
				<div class="span2">
					<label>First:</label>
					<input type="text" id="firstname" name="firstname" value=""/>
				</div>
				<div class="span2">
					<label>Middle:</label>						
					<input type="text" id="middlename" name="middlename" value=""/>
				</div>
				<div class="span4">
					<label>Last:</label>
					<input type="text" id="lastname" name="lastname" value=""/>
				</div>
			</div>
		</div>
		<div class="row-fluid">
			<br>
			<div class="span8">
				<label>Username:</label>
			</div>
			<div class="span8">											
				<input type="text" id="username" name="username" value=""/>
			</div>
			
			<div class="span8">
				<label>E-mail Address:</label>
			</div>
			<div class="span8">											
				<input type="text" id="email" name="email" value=""/>
			</div>
			<div class="span8">
				<label>Confirm E-mail Address:</label>
			</div>
			<div class="span8">											
				<input type="text" id="emailc" name="emailc" value=""/>
			</div>
		</div>	
	</div>
</div>

<div class="row-fluid">
	<div class="span6 offset3 text-right">
		<a id= "new_profile_submit" class="btn btn-wide btn-primary btn-edit-submit">Add Profile</a>		
	</div>
</div>

<!-- Audit Error dialog -->
<div class="modal fade" id="errAudit" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Account Data Error</h4>
            </div>
            <div class="modal-body">
				<h6 id=errText> </h6>
                <div class="span6">	
					<div id="errList"></div>
				</div>	 
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">OK</button>
                
            </div>
        </div>
    </div>
</div><!-- end modal dialog -->
<div id='info'> </div>
</form>
