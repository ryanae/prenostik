<div class="row-fluid">
	<div class="span12">
		<div>
			<h1 id='coidentifier'> </h1>	
			<h3>Edit User</h3>		
		</div>
		<hr>		
	</div>
</div>

<div class="row-fluid profile">
    <div class="profile-avatar">
        <i class="icon-user"></i>
    </div>
</div>

<form id = "edit_user_form" method="post" action="/users/update_user">

<div class="row-fluid">
	<div class="span6 offset3 flat-well">		
		<div class="row-fluid">
			<div class="span12">
				   <h5>Select filter:</h5>
						<select id= 'selFilter'> 
							<option id = "filterAll" value="all">All Accounts</option>
							<option id = "filterLocked" value="Locked">Locked</option>
							<option id = "filterActive" value="Active">Active</option>
							<option id = "filterNew" value="New User">New User</option>
							<option id = "filterExpired" value="Expired Password">Expired Password</option>
							<option id = "filterExAccount" value="Expired Account">Expired Account</option>
							<option id = "filterReset" value="Reset">Reset</option>								
						</select>						
				<select id= "selEditUser"> 
					<option id= "-1" value=-1>Select User</option>						
					{{#each users}}
						<option id='{{this.id}}' value=	'{{this.data}}'>
						{{this.lname}}, {{this.fname}} {{this.mname}}
						</option>
					{{/each}}						
				</select>
			</div>
			<br>				
			<div class="row-fluid">
				<div class="span12">
					<label><i class="icon-user">&nbsp </i>Name:</label>
				</div>
			</div>
			<div class="row-fluid">
				<div class="span12">
					<div class="row-fluid">
						<div class="span6">
							<div class="row-fluid">
								<div class="span4">
									<label>First:</label>							
								</div>
								<div class="span3">
									<label>Middle:</label>							
								</div>
								<div class="span5">
									<label>Last:</label>							
								</div>						
							</div>
							<div class="row-fluid">
								<div class="span4">							
									<input type="text" id="firstname" name = "firstname" value=""/>
								</div>		
								<div class="span3">								
									<input type="text" id="middlename" name = "middlename" value=""/>
								</div>
								<div class="span5">								
									<input type="text" id="lastname" name = "lastname" value=""/>
								</div>
							</div>
							<div class="row-fluid">
								<div class="span12">
									<label><i class="icon-user">&nbsp </i>Username:</label>
								</div>
							</div>
							<div class="row-fluid">
								<div class="span12" >											
									<input type="text" id="username" name = "username" value=""/>
								</div>
							</div>					
							<div class="row-fluid">
								<div class="span12">
									<label><i class="icon-envelope">&nbsp </i>E-mail Address:</label>
								</div>							
							</div>
							<div class="row-fluid">
								<div class="span12">											
									<input type="text" id="email" name = "email" value=""/>
								</div>
							</div>
							<div class="row-fluid">
								<div class="span12">
									<label>Confirm E-mail Address:</label>
								</div>
							</div>
							<div class="row-fluid">
								<div class="span12">											
									<input type="text" id="emailc" name = "emailc" value=""/>
								</div>
							</div>
							
							<div class="row-fluid">
								<div class="span12">
									<label><i id="statusPic" class="icon-lock">&nbsp </i>User account status:</label>			
								</div>		
							</div>
							<div class="row-fluid">								
								<div class="span6">				
									<label id="lblStatus" name="lblStatus" class="label label-info">(Unknown)</label>
								</div>
								<div class="span6">
									<select id ="status">
											{{#each statusVals}}
												<option id='{{this.id}}' value=	'{{this.value}}'>
												{{this.text}}
												</option>
											{{/each}}						
									</select>
								</div>
							</div>
						
						</div>
						<div class="span6">
							<div class="row-fluid">
								<div class="span12">
									<label></label>
								</div>
							</div>
							<div class="row-fluid">
								<div class="span11 offset1">
									<label>Assigned Role(s):</label>
								</div>
							</div>
							<div class="row-fluid">
								<div class="span11 offset1">										
									<ul id="lstRoles" >																		
										<li>(Unknown)</li>										
									</ul>
								</div>
							</div>										
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<div class="row-fluid">
	<div class="span6 offset3">	
		<div class="row-fluid">									
			<div class="span12">
				<div class="row-fluid">									
					<a href="#" id="edit_role" class="btn btn-wide btn-primary btn-edit-role btn-stack"> 
						<i class="icon-edit"></i>
						Edit Role
					</a>				
					<a id="reset_password" class="btn btn-wide btn-primary btn-reset-password btn-stack">
						<i class="icon-refresh"></i>
						Reset Password
					</a>						
					<a id="edit_submit" class="btn btn-wide btn-primary btn-edit-submit btn-stack">Save Changes</a>
				</div>
			</div>
		</div>					
	</div>					
</div>
<!-- Audit Error dialog -->
<div class="modal fade" id="errAudit" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Account Data Error</h4>
            </div>
            <div class="modal-body">
				<h6 id=errText> </h6>
                <div class="span6">	
					<div id="errList"></div>
				</div>	 
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">OK</button>
                
            </div>
        </div>
    </div>
</div><!-- end modal dialog -->

<!-- Reset dialog -->
<div class="modal fade" id="confirmReset" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Confirm Password Reset</h4>
            </div>
            <div class="modal-body">				
                <div class="span8">	
					<h5>Reset the password for this account?</h5>
					<br>
					<label id="fullname" name="fullname"></label>
					<label id="rusername" name="rusername"></label>
					<label id="remail" name="remail"></label>
					<label id="rstatus" name="rstatus"></label>
				</div>				
            </div>
            <div class="modal-footer">                
                <button id="resNO" type="button" class="btn btn-default btn-primary" data-dismiss="modal">Cancel</button>
				<button id="resOK" type="button" class="btn btn-primary" data-dismiss="modal">Yes</button>
            </div>
        </div>
    </div>
</div><!-- end modal dialog -->

<div id='info' hidden>
<input type="hidden" id="id" name = "id" value=""/> 
</div>

</form>
