
<div id="sectionContainer">
	<div class="row-fluid">
		<div class="alert alert-info">
			<div>
				<h1 id='coidentifier'> </h1>		
				<h3>User Management</h1>
			</div>
			<hr>
			<div class="row-fluid">
			
				<div class="span12">					
					<p class="text-center">
					<span id="poption">
					<a href="#" id = 'btn_select_account' class="btn btn-wide btn-large-icon btn-primary btn-select-account" style="visibility:hidden">
						<i class="icon-globe"></i>
						Select Account...
					</a>
					</span>
					<span id="buttonbank"  style="visibility:hidden">
						<a href="#" id= "edit_user" class="btn btn-wide btn-large-icon btn-primary btn-edit-users" style="visibility:hidden">
						<i class="icon-user"></i>
							Edit User Accounts
						</a>
						<a href="#" id = 'edit_all_roles' class="btn btn-wide btn-large-icon btn-primary btn-manage-roles" style="visibility:hidden">
							<i class="icon-cog"></i>
							Manage User Roles
						</a>			
						<a href="#" id = 'add_user' class="btn btn-wide btn-large-icon btn-primary btn-add-user" style="visibility:hidden"> 
						<i class="icon-plus"></i>
							Add a New User
						</a>
						<a href="#" id = 'delete_user' class="btn btn-wide btn-large-icon btn-primary btn-delete-user" style="visibility:hidden" > 
							<i class="icon-minus"></i>
							Delete a User
						</a>
						
					</span>					
				</p>
				</div>
				
			</div>	
		</div>		
	</div>		
	<!-- Account Select dialog -->
	<div class="modal fade" id="dlg_selectAccount" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
		<div class="modal-dialog">
			<div class="modal-content">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
					<h4 class="modal-title">Select Account</h4>
				</div>
				<div class="modal-body">				
					<div class="span5">
						Select an account to access its users:
						<select id= 'selAccountAllUsers' style="visibility:hidden"> 
							<option id = "-1" value="-1">(Select Account)</option>
							{{#each accounts}}
								<option id='{{this.id}}' value=	'{{this.data}}'>
								{{this.name}}
								</option>
							{{/each}}						
						</select>
					</div>				
				</div>
				<div class="modal-footer">                
					<button id="btn_selActOK" type="button" class="btn btn-default btn-primary" data-dismiss="modal">OK</button>
					<button type="button" class="btn btn-primary" data-dismiss="modal">Cancel</button>									
				</div>
			</div>
		</div>
	</div><!-- end modal dialog -->
	<div id='info' hidden> </div>	
</div>

